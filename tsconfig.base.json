{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
    "lib": ["es2023"],
		"module": "NodeNext",
    "target": "es2022",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
		"resolveJsonModule": true,
    "moduleResolution": "NodeNext",

		"noEmit": true,
		"emitDeclarationOnly": false,
		"importHelpers": true,
		"allowImportingTsExtensions": true,
		"types": ["node"],
	},
	"exclude": ["node_modules", "**/node_modules"]
}
